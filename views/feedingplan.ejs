<head>
    <%- include('./partials/head'); %>
</head>

<body>

    <style>
        body {
            background-image: url("img/okeykat-w6elADh_jww-unsplash.jpg");
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center center;
            background-attachment: fixed;
            height: 100vh;
            background-color: rgba(245, 217, 229, 255);
        }
        
        .page-caption {
            margin-top: 5%;
            margin-bottom: 10%;
            padding-top: 20px;
            padding-bottom: 20px;
            max-width: 100%;
            width: 100%;
            text-align: center;
            color: rgba(0, 0, 0);
            background: rgba(255, 255, 255, 0.9);
        }
        
        .card {
            margin-bottom: 5%;
            background: rgba(255, 255, 255, 0.9);
        }
    </style>

    <div class="page-caption">
        <h1>Pet Food Calculator</h1>
        <h5>Enter your pet's information to create a personalized feeding plan</h5>
    </div>

    <div class="container-lg">
        <div class="col-md-6 offset-md-3">
            <div class="card" style="width: 100%; padding: 20px;">
                <div class="card-body">
                    <h4 class="card-title text-center" id="feedingPlanTitle"></h4>
                    <ul>
                        <li>
                            <%= petInfo.petName %>
                        </li>
                        <li>
                            <%= petInfo.petSpecies %>
                        </li>
                        <li>
                            <%= petInfo.calorieGoal %>
                        </li>
                        <li>
                            <%= petInfo.mealsPerDay %>
                        </li>
                        <li>
                            <%= petInfo.dryFoodName %>
                        </li>
                        <li>
                            <%= petInfo.caloriesPerCup %>
                        </li>
                        <li>
                            <%= petInfo.wetFoodName %>
                        </li>
                        <li>
                            <%= petInfo.caloriesPerCan %>
                        </li>
                        <li>
                            <%= petInfo.cansPerDay %>
                        </li>
                    </ul>

                    <!-- <form>
                        <div class="mb-3">
                            <h5 class="text-center">Dry Food:</h5>
                            <div class="text-center" id="dryFoodPlan"></div>
                        </div>
                        <div class="mb-3">
                            <h5 class="text-center">Wet Food:</h5>
                            <div class="text-center" id="wetFoodPlan">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-secondary">Download</button>
                    </form> -->
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js " integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB " crossorigin="anonymous "></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js " integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13 " crossorigin="anonymous "></script>

</body>

</html>